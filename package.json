{
  "name": "esbuild-example",
  "version": "0.0.1",
  "author": "andycarrell",
  "description": "",
  "license": "ISC",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:andycarrell/esbuild-example.git"
  },
  "scripts": {
    "build:js": "esbuild src/index.js --bundle --minify --loader:.js=jsx --outfile=dist/bundle.js",
    "build:css": "postcss src/index.css -o dist/index.css",
    "build": "npm run prime && npm run build:js && npm run build:css",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prime": "copyfiles public/* dist --up=1",
    "start": "npm run prime && concurrently \"npm run build:js -- --servedir=dist\" \"npm run build:css -- --watch\""
  },
  "dependencies": {
    "autoprefixer": "10.4.8",
    "esbuild": "0.15.7",
    "postcss": "8.4.16",
    "postcss-cli": "10.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.1.8"
  },
  "devDependencies": {
    "concurrently": "7.4.0",
    "copyfiles": "2.4.1",
    "prettier": "2.7.1"
  }
}
